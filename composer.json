{
    "name": "codevirtus/pesepay",
    "description": "Pesepay online payment integration package",
    "keywords": [
        "codevirtus",
        "pesepay"
    ],
    "homepage": "https://github.com/codevirtus/pesepay",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sean P. T. Huvaya",
            "email": "developer@codevirtus.com",
            "role": "Developer"
        },
        {
            "name": "Michael T. Tsuro",
            "email": "developer@codevirtus.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Pesepay\\Payments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pesepay\\Payments\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
